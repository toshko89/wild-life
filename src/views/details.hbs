<main>
    <section id="details-page">
        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Title: {{title}}</h1>
                    <h3>Created by an author: {{authorName}}</h3>
                    <div class="card_animal">
                        <p class="card-keyword">Keyword: {{keyword}}</p>
                        <p class="card-location">Location: {{location}}</p>
                        <p class="card-date">Date: {{date}}</p>
                    </div>

                    <p class="disc">Description: {{description}}</p>

                    <div class="social-btn">
                        {{#if isOwn}}
                        <!-- Only for registered user and author of the post -->
                        <a href="/wildlife/details/{{_id}}/edit" class="edit-btn">Edit</a>
                        <a href="/wildlife/details/{{_id}}/delete" class="del-btn">Delete</a>
                        {{else if user}}
                        {{#if isVoted}}
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        {{else}}
                        <a href="/wildlife/details/{{_id}}/up-vote" class="vote-up">UpVote +1</a>
                        <a href="/wildlife/details/{{_id}}/down-vote" class="vote-down">DownVote -1</a>
                        {{/if}}
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="card_right">
                <img src="{{image}}" alt="image">
            </div>
        </div>

    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->
                        <p class="PV">Total rating of votes: 0</p>
                    </div>
                    <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                    <!-- <p class="disc">People who voted for the post - alex@gmai.com, petar@gmail.com, petq@gmail.com</p>-->

                    <!-- If not display: -->
                    <p class="disc">People who voted for the post - No one has voted yet.</p>
                </div>
            </div>
        </div>
    </section>

</main>